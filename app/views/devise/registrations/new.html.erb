<div id='signup-form' class='hero-unit'>
  <h2>Sign up</h2>

  <%= form_for(@user, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class='field'><%= f.label :first_name %><br />
    <%= f.text_field :first_name %></div>

    <div class='field'><%= f.label :last_name %><br />
    <%= f.text_field :last_name %></div>

    <div class='field'><%= f.label :city %><br />
    <%= f.text_field :city %></div>

    <div class='field'><%= f.label :state %><br />
    <%= f.text_field :state %></div>

    <div class='field'><%= f.label :zip_code %><br />
    <%= f.text_field :zip_code %></div>

    <div class='field'><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true %></div>

    <div class='field'><%= f.label :password %><br />
    <%= f.password_field :password %></div>

    <div class='field'><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>

    <div class='field'><%= f.submit "Sign up" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>