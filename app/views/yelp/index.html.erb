

<%= form_tag('/search', method: :get, remote: :true) do %>

<%= label_tag :location, "Enter Location" %>
<%= select_tag :location, options_from_collection_for_select(City.all, :name, :name) %>

<%= label_tag :category, "Enter Category" %>
<%= select_tag(:category, options_from_collection_for_select(Category.all, :name, :name)) %>

<%= submit_tag "Go!" %>
<% end %>
<div class='container'>

<%= render 'list', restaurant_list: @restaurant_list %>

<%= render 'yelp/map', restaurant_list: @restaurant_list %> 


</div>

<script>
$('.restaurant-row').hover(function(){
	$(this).children('td.fav-form').children('form').slideToggle();
})


</script>

